set notification-warning-fg     "#f0bf7a" # bright:yellow
set notification-bg             "#0e1415" # bg
set notification-fg             "#88db3f" # bright:green

set completion-bg               "#0e1415" # bg2
set completion-fg               "#cecece" # fg
set completion-group-bg         "#0e1415" # bg1
set completion-group-fg         "#383838" # gray
set completion-highlight-bg     "#6f8fdb" # bright:blue
set completion-highlight-fg     "#0e1415" # bg2

# Define the color in index mode
set index-bg                    "#0e1415" # bg2
set index-fg                    "#cecece" # fg
set index-active-bg             "#6f8fdb" # bright:blue
set index-active-fg             "#0e1415" # bg2

set inputbar-bg                 "#0e1415" # bg
set inputbar-fg                 "#cecece" # fg

set statusbar-bg                "#0e1415" # bg2
set statusbar-fg                "#cecece" # fg

set highlight-color             "#f0bf7a" # bright:yellow
set highlight-active-color      "#ffbc5d" # bright:orange

set default-bg                  "#0e1415" # bg
set default-fg                  "#cecece" # fg
set render-loading              true
set render-loading-bg           "#0e1415" # bg
set render-loading-fg           "#cecece" # fg

# Recolor book content's color
set recolor-lightcolor          "#0e1415" # bg
set recolor-darkcolor           "#cecece" # fg
set recolor                     "true"
# set recolor-keephue             true      # keep original color

set font        "JetBrainsMonoNerdFont normal 12"

